@model List<Product>
@{
    ViewBag.Title = "All Products";
    Layout = "_AdminLayout";
}
<table class="table table-striped table-bordered table-sm">
    <tr>
        <th class="text-right">ID</th>
        <th>Name</th>
        <th>Category</th>
        <th class="text-right">Price</th>
        <th class="text-center">Actions</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td class="text-right">@item.Id</td>
            <td>@item.Name</td>
            <td class="text-secondary">@item.Category.Name</td>
            <td class="text-right">@item.Price.ToString("c", new CultureInfo("en-US"))</td>
            <td class="text-center">
                <form asp-action="DeleteProduct" method="post">
                    <a asp-action="EditProduct" class="btn btn-sm" style="background-color: #3CC395; color: white;"
                   asp-route-productId=@item.Id>Edit</a>
                    <input type="hidden" name="productId" value="@item.Id" />
                    <button type="submit" class="btn btn-danger btn-sm">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>
<div class="text-center">
    <a asp-action="CreateProduct" class="featured-btn" style="text-decoration: none; background-color: #3AC1B8;">Create Product</a>
</div>

