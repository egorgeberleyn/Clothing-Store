@model Product

<div class="container">
    <h3>Product creation</h3>
    <form asp-action="CreateProduct" method="post" class="form-horizontal">
        <div class="form-group">
            <div class="col-md-5">
                <select asp-for="Category.Name" class="form-select" aria-label="Default select example">
                    <option value="Man Store">Man's</option>
                    <option value="Woman Store">Woman's'</option>
                    <option value="Shoes">Shoes</option>
                    <option value="Accesories">Accesories</option>
                    <option value="Sale">Sale</option>
                    <option value="Vintage">Vintage</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Name"></label>
            <div class="col-md-5">
                <input asp-for="Name" class="form-label" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Price"></label>
            <div class="col-md-5">
                <input asp-for="Price" class="form-label" rows="2" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <div class="col-md-5">
                <textarea asp-for="Description" class="form-label" rows="2"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Available"></label>
            <div class="col-md-5">
                <input asp-for="Available" class="form-label" />
                <span asp-validation-for="Available" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <input type="checkbox" class="form-check-input" asp-for="IsFavorite">
            <label class="form-check-label" asp-for="IsFavorite">Add to favorites</label>
            <span asp-validation-for="IsFavorite" class="text-danger"></span>
        </div>
        <input class="btn btn-primary mt-2" type="submit" value="Create" />
    </form>
</div>
