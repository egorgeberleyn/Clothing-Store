<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Clothing Store</title>
    <link href="~/favicon.ico" rel="shortcut icon" runat="server" type="image/x-icon" />
    <link href="~/favicon.ico" rel="icon" runat="server" type="image/ico" />

    <link rel="stylesheet" type="text/css" href="~/lib/slick/slick.css" />
    <link rel="stylesheet" type="text/css" href="~/lib/slick/slick-theme.css" />    
    <link rel="stylesheet" type="text/css" href="~/lib/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="~/css/all.min.css" />
    <link rel="stylesheet" type="text/css" href="~/css/style.min.css" />

    <!--Validation style-->
    <style>
        .input-validation-error {
            border-color: red;
            background-color: #fee;
        }
    </style>
</head>
<body>
    <header>
        <div class="container">
            <div class="row">
                <div class="col-lg-2">
                    <img src="~/img/Aditii.png" alt="Logo" />
                </div>
                <div class="col-lg-6 offset-lg-1">
                    <form class="search-bar" action="" method="get">
                        <input class="search-place" name="s" placeholder="" type="text" />
                        <button class="search-btn" asp-controller="Search" asp-action="Index" type="submit"></button>
                    </form>
                </div>
                <div class="col-lg-2 offset-lg-1">
                    @await Component.InvokeAsync("CartTotalPrice")
                </div>
            </div>
        </div>
    </header>

    <div class="navbar">
        <div class="container">
            <ul>
                <li>
                    <a class="nav-section" asp-controller="Home" asp-action="Index">HOME</a>
                    <span class="delimiter">|</span>
                </li>
                <li>
                    <a class="nav-section" asp-controller="Category" asp-action="ProductList" asp-route-category="Woman Store">WOMAN STORE</a>
                    <span class="delimiter">|</span>
                </li>
                <li>
                    <a class="nav-section" asp-controller="Category" asp-action="ProductList" asp-route-category="Accesories">ACCESSORIES</a>
                    <span class="delimiter">|</span>
                </li>
                <li>
                    <a class="nav-section" asp-controller="Category" asp-action="ProductList" asp-route-category="Man Store">MAN STORE</a>
                    <span class="delimiter">|</span>
                </li>
                <li>
                    <a class="nav-section" asp-controller="Category" asp-action="ProductList" asp-route-category="Shoes">SHOES</a>
                    <span class="delimiter">|</span>
                </li>
                <li>
                    <a class="nav-section" asp-controller="Category" asp-action="ProductList" asp-route-category="Sale">SALE</a>
                    <span class="delimiter">|</span>
                </li>
                <li>
                    <a class="nav-section" asp-controller="Category" asp-action="ProductList" asp-route-category="Vintage">VINTAGE</a>
                    <span class="delimiter">|</span>
                </li>

                <li>
                    <a class="nav-section" asp-controller="Order" asp-action="OrderList">PROFILE</a>
                    <span class="delimiter">|</span>
                </li>
                <li>
                    <a class="nav-section" href="#services">SERVICES</a>
                    <span class="delimiter">|</span>
                </li>
                <li><a class="nav-section" href="#contactus">CONTACT US</a></li>
            </ul>
        </div>
    </div>

    @RenderBody()

    <footer>
        <p class="copyright">Copyright © 2022 DarBerg</p>
    </footer>

    <script src="https://code.jquery.com/jquery-3.6.0.slim.min.js"
            integrity="sha256-u7e5khyithlIdTpu22PHhENmPcRdFiHRjhAuHcs05RI=" crossorigin="anonymous"></script>
    <script type="text/javascript" src="~/lib/slick/slick.min.js"></script>
    <script src="~/js/main.js"></script>

</body>
</html>
