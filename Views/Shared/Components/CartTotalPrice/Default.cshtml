@model ShopCart
<div class="row shopping">
    <span class="col-3">
        <a asp-controller="ShopCart" asp-action="Cart" class="shopping-cart">
            <img src="/img/Shape 2.png" alt="shopping cart" />
        </a>
    </span>
    @if (Model.ShopCartItems.Count() > 0)
    {
        <div class="col-6">
            <div>
                <b>@Model.ShopCartItems.Sum(x => x.Quantity)</b> item(s)
            </div>
            <div class="shopping-cart-price">
                @Model.ComputeCartPrice().ToString("c", new CultureInfo("en-US"))
            </div>
        </div>
    }
    else
    {
        <div class="col-5">
            <span class="shopping-cart-price">
                $0
            </span>
        </div>      
    }
</div>